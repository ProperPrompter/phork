{
  "version": "0.0.1",
  "configurations": [
    {
      "name": "api",
      "runtimeExecutable": "node",
      "runtimeArgs": ["apps/api/node_modules/tsx/dist/cli.mjs", "watch", "apps/api/src/server.ts"],
      "port": 3001
    },
    {
      "name": "worker",
      "runtimeExecutable": "node",
      "runtimeArgs": ["apps/api/node_modules/tsx/dist/cli.mjs", "watch", "apps/api/src/worker.ts"],
      "port": 3002
    },
    {
      "name": "web",
      "runtimeExecutable": "node",
      "runtimeArgs": ["apps/web/node_modules/next/dist/bin/next", "dev", "--port", "3000", "apps/web"],
      "port": 3000,
      "autoPort": false
    }
  ]
}
